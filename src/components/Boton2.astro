---
const {title, href} = Astro.props 
---
<a class="btn" href={href}>{title}
</a>

<style>
    .btn {
        text-decoration: none;
		transition: all 0.5s;
		font-size: 17px;
		width: 12rem;
		padding: 1ch 2ch;
		background-color: rgb(0, 0, 0);
		color: #ffffff;
		font-family: Roboto, sans-serif;
		border: none;
		border-radius: 2px;
		box-shadow:
			2px 2px 0px hsl(0, 0%, 10%),
			4px 4px 0px hsl(0, 0%, 20%),
			6px 6px 0px hsl(0, 0%, 30%),
			8px 8px 0px hsl(0, 0%, 40%),
			10px 10px 0px hsl(0, 0%, 50%),
			12px 12px 0px hsl(0, 0%, 60%),
			14px 14px 0px hsl(0, 0%, 70%),
			16px 16px 0px hsl(0, 0%, 80%),
			18px 18px 0px hsl(0, 0%, 90%);
	}

	.btn:hover {
		background-color: hsl(0, 0%, 40%);
		color: #fff;
		box-shadow: none;
	}

    @media (max-width: 600px){
            .btn{ 
                width: 60%;
                font-size: 12px;
            }
        }
</style>